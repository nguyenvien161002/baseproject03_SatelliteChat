<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageUserOnline"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:contentDescription="@string/username"
            android:src="@drawable/avatar"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/Circular"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/userNameOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_author"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/imageUserOnline"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_icon_online_2_rounded"
            android:contentDescription="@string/icon"
            android:src="@drawable/ic_baseline_circle"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageUserOnline"
            app:layout_constraintEnd_toEndOf="@+id/imageUserOnline"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>