<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables,UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/contentStatusContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="52dp"
                android:elevation="2dp"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/contentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_thinking_bubble"
                        android:elevation="@dimen/_2sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:minWidth="50dp"
                        android:minHeight="40dp"
                        android:padding="4dp"
                        android:text="..."
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </RelativeLayout>


            </RelativeLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/bubbleIconFirstChild"
                android:layout_width="16dp"
                android:layout_height="15dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="48dp"
                android:background="@color/white"
                android:contentDescription="@string/username"
                android:elevation="@dimen/_1sdp"
                android:padding="2dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/Circular"
                app:strokeColor="@color/border_input"
                app:strokeWidth="1dp"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/bubbleIconSecondChild"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="42dp"
                android:background="@color/white"
                android:contentDescription="@string/username"
                android:elevation="@dimen/_1sdp"
                android:padding="2dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/Circular"
                app:strokeColor="@color/border_input"
                app:strokeWidth="1dp"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageUserOnline"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="@string/username"
                android:padding="2dp"
                android:src="@drawable/avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/Circular"
                app:strokeColor="@null"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_icon_online_2_rounded"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_baseline_circle"
                app:layout_constraintBottom_toBottomOf="@+id/imageUserOnline"
                app:layout_constraintEnd_toEndOf="@+id/imageUserOnline"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/userNameOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_author"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>