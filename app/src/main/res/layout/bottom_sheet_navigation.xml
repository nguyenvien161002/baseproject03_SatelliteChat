<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_bottom"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/icon"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_round_remove_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_bottom_1_black100"
        android:weightSum="9">

        <TextView
            android:id="@+id/btnCancelChoosePostPermission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="left"
            android:padding="10dp"
            android:paddingStart="16dp"
            android:text="@string/cancel_label"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/share_with_label"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnDoneChoosePostPermission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:padding="10dp"
            android:paddingEnd="16dp"
            android:text="@string/done_label"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnChoosePostPermissionFriFollow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            tools:ignore="RtlSymmetry,UselessParent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/border_radius_50_black"
                android:contentDescription="@string/icon"
                android:padding="10dp"
                android:src="@drawable/icon_user_tick_right" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_friend_follow"
                android:textAlignment="textStart"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/radioCheckFriFollow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/icon"
                android:padding="12dp"
                android:src="@drawable/icons8_circle_30" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnChoosePostPermissionPublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            tools:ignore="RtlSymmetry,UselessParent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/border_radius_50_black"
                android:contentDescription="@string/icon"
                android:padding="10dp"
                android:src="@drawable/icon_globe" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_share_public"
                android:textAlignment="textStart"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/radioCheckPublic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/bg_radio_checked"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>