<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.client.ChatActivity">

    <!--  Header  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBoxChat"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlSymmetry,UseCompoundDrawables">

        <ImageView
            android:id="@+id/icon_backspace"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:contentDescription="@string/icon_back"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boxInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/boxInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnVoiceCall"
            app:layout_constraintStart_toEndOf="@+id/icon_backspace"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,UselessParent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageUserOrGroup"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="2dp"
                    android:src="@drawable/avatar"
                    app:shapeAppearanceOverlay="@style/Circular" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userOrGroup_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="@string/app_author"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/a_new_message"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="2dp"
                    android:text="Hoạt động 5 phút trước"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnVoiceCall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/icon"
            android:padding="10dp"
            android:src="@drawable/icon_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnVideoCall"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnVideoCall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/icon"
            android:padding="10dp"
            android:src="@drawable/icon_video_call_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnInfoReceiver"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnInfoReceiver"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/icon"
            android:padding="10dp"
            android:src="@drawable/icon_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--  Footer  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerToolsBarFooter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="6dp">

            <ImageView
                android:id="@+id/btnTools"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/icon_four_squares"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/btnCameraCapture"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_camera_alt_purple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnTools"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnChooseImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="8dp"
                android:src="@drawable/icon_picture_purple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnCameraCapture"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnMicrophone"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/icon_microphone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnChooseImage"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@+id/btnEmoticon"
            app:layout_constraintStart_toEndOf="@+id/containerToolsBarFooter">

            <EditText
                android:id="@+id/inputContent"
                android:layout_width="166dp"
                android:layout_height="46dp"
                android:autofillHints=""
                android:background="@drawable/border_input_texting"
                android:hint="@string/texting"
                android:inputType="text"
                android:paddingStart="14dp"
                android:paddingTop="14dp"
                android:paddingEnd="44dp"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/btnChooseIcon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="2dp"
                android:padding="8dp"
                android:src="@drawable/icon_happy_face"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/inputContent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/btnEmoticon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="6dp"
            android:src="@drawable/icon_facebook_like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>